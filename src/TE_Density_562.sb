#!/bin/bash -login

#SBATCH -J 562_TE_Density
#SBATCH --time=120:00:00
#SBATCH --ntasks=1
#SBATCH --cpus-per-task=7
#SBATCH --mem-per-cpu=45G
#SBATCH -o 562_Density.out
#--------------------------------------------------------
ROOT_DIR=/mnt/research/edgerpat_lab/Scotty/CFRA_TE_Density/bin/TE_Density/
DATA_DIR=/mnt/research/edgerpat_lab/Scotty/CFRA_TE_Density/data/
GENOME="Fragaria_562"


# Load the Python scripts
module load GCC/7.3.0-2.30 OpenMPI/3.1.1 Python/3.7.0

# Source the Python packages that are version controlled
# These were created from the git submodule
source /mnt/research/edgerpat_lab/Scotty/venvs/CFRA_TE_Density/bin/activate

# Go to project directory
cd $ROOT_DIR/../../

pwd
# Run the code
python $ROOT_DIR/process_genome.py $DATA_DIR/Genes/Blueberry_Genes.gff $DATA_DIR/TEs/Blueberry_EDTA_TEs.gff $GENOME -c $ROOT_DIR/config/production_run_config.ini  -n 7 --reset_h5 -o $ROOT_DIR/results
